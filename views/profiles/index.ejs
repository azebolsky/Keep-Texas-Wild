<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>My Profile</title>
</head>
<body>
    <h1>Welcome User:</h1>
    <% if (profile) { %>
        <section>
            <% profile.forEach(function(p) { %>
                <div>Name: </div>
                <div><%= p.fullName %></div>
                <div>Phone: </div>
                <div><%= p.phoneNumber %></div>
                <div>About: </div>
                <div><%= p.aboutInfo %></div>
                <a href="/profiles/<%=p._id%>/edit">Edit Profile</a>
            <% }) %> 
        </section>
    <% } %>
    <button><a href="/profiles/new">Add Profile</a></button>
</body>
</html>